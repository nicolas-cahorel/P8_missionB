<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailScreenFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detailScreen.DetailScreenFragment">


    <LinearLayout
        android:id="@+id/detailScreenTopComponent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/background_clear_purple"
        android:orientation="horizontal"
        android:padding="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/detailScreenBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:contentDescription="@string/icon_search_content_description"
            android:focusable="true"
            android:src="@drawable/icon_back"/>

        <TextView
            android:id="@+id/detailScreenScreenName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:hint="@string/detail_screen_description"
            android:text="Full NAME"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/detailScreenFavoriteFalseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:contentDescription="@string/icon_favorite_false_description"
            android:focusable="true"
            android:src="@drawable/icon_favorite_false"/>

        <ImageView
            android:id="@+id/detailScreenFavoriteTrueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:contentDescription="@string/icon_favorite_true_description"
            android:focusable="true"
            android:visibility="gone"
            android:src="@drawable/icon_favorite_true"/>

        <ImageView
            android:id="@+id/detailScreenEditButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:contentDescription="@string/icon_edit_description"
            android:focusable="true"
            android:src="@drawable/icon_edit"/>

        <ImageView
            android:id="@+id/detailScreenDeleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:contentDescription="@string/icon_delete_description"
            android:focusable="true"
            android:src="@drawable/icon_delete"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/detailScreenScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/detailScreenTopComponent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/detailScreenScrollViewComponent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/detailScreenCandidateAvatar"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="16dp"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:contentDescription="@string/icon_full_name_content_description"
                android:focusable="true"
                android:src="@drawable/default_avatar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/detailScreenScrollViewComponent"/>

            <LinearLayout
                android:id="@+id/detailScreenContactComponent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal"
                android:padding="2dp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detailScreenCandidateAvatar">


                <ImageView
                    android:id="@+id/detailScreenPhoneButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:contentDescription="@string/button_Phone_description"
                    android:focusable="true"
                    android:src="@drawable/icon_phone_circle"/>



                <ImageView
                    android:id="@+id/detailScreenSmsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:contentDescription="@string/button_sms_description"
                    android:focusable="true"
                    android:src="@drawable/icon_sms_circle"/>

                <ImageView
                    android:id="@+id/detailScreenEmailButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:contentDescription="@string/button_email_description"
                    android:focusable="true"
                    android:src="@drawable/icon_email_circle"/>

            </LinearLayout>



            <TextView
                android:id="@+id/detailScreenAboutComponent"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_gravity="center_vertical"
                android:gravity="start"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:padding="16dp"
                android:text="@string/add_screen_about"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detailScreenContactComponent"
                android:background="@drawable/background_24dp_rounded_clear_purple"/>

            <TextView
                android:id="@+id/detailScreenBirthdayDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="start"
                android:layout_marginTop="80dp"
                android:layout_marginStart="16dp"
                android:text="dd/mm/yyyy (xx years)"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/detailScreenAboutComponent"
                app:layout_constraintEnd_toEndOf="@id/detailScreenAboutComponent"
                app:layout_constraintTop_toTopOf="@id/detailScreenAboutComponent"/>

            <TextView
                android:id="@+id/detailScreenBirthdayText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="start"
                android:layout_marginStart="16dp"
                android:text="@string/detail_screen_birthday"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/detailScreenAboutComponent"
                app:layout_constraintEnd_toEndOf="@id/detailScreenAboutComponent"
                app:layout_constraintTop_toBottomOf="@id/detailScreenBirthdayDate"/>


            <TextView
                android:id="@+id/detailScreenSalaryComponent"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_gravity="center_vertical"
                android:gravity="start"
                android:layout_margin="16dp"
                android:padding="16dp"
                android:text="@string/add_screen_salary"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detailScreenAboutComponent"
                android:background="@drawable/background_24dp_rounded_clear_purple"/>

            <TextView
                android:id="@+id/detailScreenSalaryDisplay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="start"
                android:layout_marginTop="80dp"
                android:layout_marginStart="16dp"
                android:text="3500€"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/detailScreenSalaryComponent"
                app:layout_constraintEnd_toEndOf="@id/detailScreenSalaryComponent"
                app:layout_constraintTop_toTopOf="@id/detailScreenSalaryComponent"/>

            <TextView
                android:id="@+id/detailScreenConvertedSalaryDisplay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="start"
                android:layout_marginStart="16dp"
                android:text="soit 3026.99 livres"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/detailScreenSalaryComponent"
                app:layout_constraintEnd_toEndOf="@id/detailScreenSalaryComponent"
                app:layout_constraintTop_toBottomOf="@id/detailScreenSalaryDisplay"/>

            <TextView
                android:id="@+id/detailScreenNotesComponent"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_gravity="center_vertical"
                android:gravity="start"
                android:layout_margin="16dp"
                android:padding="16dp"
                android:text="@string/add_screen_notes"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detailScreenSalaryComponent"
                android:background="@drawable/background_24dp_rounded_clear_purple"/>

            <TextView
                android:id="@+id/detailScreenNotesDisplay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="start"
                android:layout_marginTop="80dp"
                android:layout_marginStart="16dp"
                android:text="loreum ...."
                android:textColor="@android:color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/detailScreenNotesComponent"
                app:layout_constraintEnd_toEndOf="@id/detailScreenNotesComponent"
                app:layout_constraintTop_toTopOf="@id/detailScreenNotesComponent"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>